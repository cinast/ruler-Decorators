{
    "name": "ruler-decorators",
    "version": "0.0.0-preview-test",
    "description": "TypeScript decorators library for property access control and validation",
    "keywords": [
        "typescript",
        "ts",
        "decorators",
        "code-candy",
        "property-decorators",
        "access-control"
    ],
    "homepage": "https://github.com/cinast/ruler-Decorators#readme",
    "bugs": {
        "url": "https://github.com/cinast/ruler-Decorators/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cinast/ruler-Decorators.git"
    },
    "license": "MIT",
    "author": "cinast",
    "type": "commonjs",
    "main": "./dist/rulerDecorators.js",
    "types": "./dist/type/rulerDecorators.d.ts",
    "exports": {
        ".": {
            "import": "./dist/rulerDecorators.mjs",
            "require": "./dist/rulerDecorators.js"
        }
    },
    "directories": {
        "doc": "doc"
    },
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "npx tsc -b",
        "build:jsm": "esbuild src/rulerDecorators.ts --bundle --format=esm --outfile=dist/rulerDecorators.mjs",
        "build:watch": "npx tsc -w",
        "build:test": "npx tsc -p test/tsconfig.json",
        "run:test": "node test/dist/test/example.js",
        "prepublishOnly": "npx npm run build && npm test",
        "[pwsh]clear-dist": "Remove-Item -Path './dist/**', './test/dist/**' -Force",
        "[pwsh]clear-trash-at-src": "Remove-Item -Path './src/*.js','./src/*.d.ts','./src/*.d.ts.map' -Force",
        "preinstall": "node node_script/pre-install-massage.js",
        "install": "node node_script/install-massage.js",
        "postinstall": "node node_script/post-install-massage.js"
    },
    "devDependencies": {
        "esbuild": "^0.25.9",
        "tsc": "^2.0.4",
        "typescript": "^5.2.0"
    },
    "peerDependencies": {
        "typescript": ">=4.3.0"
    }
}
